# Nextcloud Docker Compose Environment Variables
# Copy this file to .env and modify the values as needed

# =============================================================================
# CORE SETTINGS
# =============================================================================

# Container naming prefix (used for all container names)
CONTAINER_NAME_PREFIX=nextcloud

# User and group IDs for file permissions
PUID=1000
PGID=1000

# Timezone
TZ=America/New_York

# Domain name for Traefik routing
DOMAIN_NAME=yourdomain.com

# =============================================================================
# NETWORK SETTINGS
# =============================================================================

# Nextcloud network name
NEXTCLOUD_NETWORK=nextcloud_apps

# =============================================================================
# VOLUME SETTINGS
# =============================================================================

# Base paths for volumes
CONFIG_BASE=/path/to/config
DATA_BASE=/path/to/data
MEDIA_BASE=/path/to/media

# Volume types and options (leave empty for default local volumes)
CONFIG_VOLUME_TYPE=
CONFIG_VOLUME_OPTIONS=
DATA_VOLUME_TYPE=
DATA_VOLUME_OPTIONS=
MEDIA_VOLUME_TYPE=
MEDIA_VOLUME_OPTIONS=

# Container media path (where media volume is mounted inside containers)
CONTAINER_MEDIA_PATH=/media

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# MariaDB database settings
NEXTCLOUD_DB_ROOT_PASSWORD=your_secure_root_password_here
NEXTCLOUD_DB_NAME=nextcloud
NEXTCLOUD_DB_USER=nextcloud
NEXTCLOUD_DB_PASSWORD=your_secure_db_password_here

# =============================================================================
# REDIS CACHE SETTINGS
# =============================================================================

# Redis password
NEXTCLOUD_REDIS_PASSWORD=your_secure_redis_password_here

# =============================================================================
# CLOUDFLARED TUNNEL SETTINGS (OPTIONAL)
# =============================================================================

# Cloudflared tunnel token (leave empty to disable)
CLOUDFLARED_TOKEN=

# Enable/disable Cloudflared (0 = disabled, 1 = enabled)
ENABLE_CLOUDFLARED=0

# =============================================================================
# EXAMPLE VALUES (UNCOMMENT AND MODIFY AS NEEDED)
# =============================================================================

# Example for local development:
# CONFIG_BASE=/home/user/nextcloud/config
# DATA_BASE=/home/user/nextcloud/data
# MEDIA_BASE=/home/user/media
# DOMAIN_NAME=localhost

# Example for NFS/SMB mounts:
# CONFIG_VOLUME_TYPE=nfs
# CONFIG_VOLUME_OPTIONS=addr=192.168.1.100,rw,nfsvers=4
# DATA_VOLUME_TYPE=nfs
# DATA_VOLUME_OPTIONS=addr=192.168.1.100,rw,nfsvers=4 